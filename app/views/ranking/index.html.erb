<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">ランキング</h3>
  </div>
  <div class="panel-body">
    <legend>フルスクワット　重量ランキング　バーベルの部</legend>
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>ランク</th>
            <th>ユーザー名</th>
            <th>重量</th>
          </tr>
        </thead>

        <tbody>
          <%= content_tag_for(:tr, @muscle_diaries.where(event_id: 65).order("weight DESC").group("user_id") ) do |ranker| %>
          <td><%=  %></td>
          <td><%= User.all.find(ranker.user_id).email %></td>
          <td><%= ranker.weight %> kg</td>
          <% end %>
        </tbody>
      </table>
    </div>

    <legend>ベンチプレス　重量ランキング　バーベルの部</legend>
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>ランク</th>
            <th>ユーザー名</th>
            <th>重量</th>
          </tr>
        </thead>

        <tbody>
          <!-- 降順にソートした後user_idユニークにすることでランキング結果を出した -->
          <%= content_tag_for(:tr, @muscle_diaries.where(event_id: 1).order("weight DESC").group("user_id") ) do |ranker| %>
          <td><%=  %></td>
          <td><%= User.all.find(ranker.user_id).email %></td>
          <td><%= ranker.weight %> kg</td>
          <% end %>
        </tbody>
      </table>
    </div>

    <legend>デッドリフト　重量ランキング　バーベルの部</legend>
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>ランク</th>
            <th>ユーザー名</th>
            <th>重量</th>
          </tr>
        </thead>

        <tbody>
          <%= content_tag_for(:tr, @muscle_diaries.where(event_id: 15).order("weight DESC").group("user_id") ) do |ranker| %>
          <td><%=  %></td>
          <td><%= User.all.find(ranker.user_id).email %></td>
          <td><%= ranker.weight %> kg</td>
          <% end %>
        </tbody>
      </table>
    </div>
    <legend>その他のランキング</legend>
        <%= collection_select :event_id, :event_id, Event.all.order("event_name"), :id, :event_name, {}, class: "form-control" %>
  </div>
</div>
